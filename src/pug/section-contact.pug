mixin section-contact
  section.section-contact#section-contact
    .row
      h2.h2 get in touch
    .section-contact__box
      .row
        .col-1-of-2
          form.form-block
            .input__regular-box.u-mb-l
              +svg('input-name')
              input(type="text", placeholder="Name").input__regular
            .input__regular-box.u-mb-l
              +svg('input-mail')
              input(type="mail", placeholder="Email adress").input__regular
            .input__textarea-box.u-mb-l
              +svg('input-message')
              textarea(placeholder="Message").input__textarea
            .input__submit-box
              .input__submit-shadow
              input(type="submit", value="send").input__submit
      .map-box
        #map

            
